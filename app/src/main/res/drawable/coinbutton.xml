<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/coin" />
            <gradient android:angle="-90" android:startColor="@color/darkcoin" android:endColor="@color/coin"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/darkcoin" />
            <solid android:color="@color/coin"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/coin" />
            <gradient android:angle="-90" android:startColor="@color/coin" android:endColor="@color/darkcoin" />
        </shape>
    </item>
</selector>